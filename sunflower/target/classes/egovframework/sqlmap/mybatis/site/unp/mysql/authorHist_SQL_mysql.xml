	<select id="countAuthorHist" parameterType="zvl" resultType="long">
		<![CDATA[
		/* countAuthorHist */

		SELECT	COUNT(*) totcnt
		FROM	TA_USER_LOG
		WHERE	1=1
		]]>
		<include refid="authorHist-where" />
	</select>

	<select id="findAllAuthorHist" parameterType="zvl" resultType="zvl">
		<![CDATA[
		/* findAllAuthorHist */
		
		SELECT	LOG_SEQ, USER_ID, USER_NAME, LOG_CATE, REG_ID, REG_NAME, LOG_PDATE
		FROM	TA_USER_LOG
		WHERE	1=1
		]]>
		<include refid="authorHist-where"/>
		<![CDATA[
		ORDER BY LOG_PDATE DESC
		]]>
		<if test='noLimit != "Y"'>
		<![CDATA[
        LIMIT #{firstIndex}, #{recordCountPerPage}
        ]]>
        </if>
	</select>
